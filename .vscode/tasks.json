// This file references tasks defined in 'UpbeatUI.build.ps1', which uses the
// Invoke-Build tool for PowerShell. To install Invoke-Build, visit their GitHub page:
// https://github.com/nightroman/Invoke-Build#install-as-module
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "BuildAll" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build_msample",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "BuildManualSample" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build_spsample",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "BuildServiceProvidedSample" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build_hsample",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "BuildHostedSample" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "CleanAll" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "restore",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "RestoreAll" ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "powershell",
      "type": "process",
      "args": [ "Invoke-Build", "RunTests" ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}