      "command": "powershell",
      "type": "process",
      "args": [
        "${workspaceFolder}/build.ps1",
        "build",
        "msample",
        "quiet"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build_spsample",
      "command": "powershell",
      "type": "process",
      "args": [
        "${workspaceFolder}/build.ps1",
        "build",
        "spsample",
        "quiet"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build_hsample",
      "command": "powershell",
      "type": "process",
      "args": [
        "${workspaceFolder}/build.ps1",
        "build",
        "hsample",
        "quiet"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "powershell",
      "type": "process",
      "args": [
        "${workspaceFolder}/build.ps1",
        "clean"
      ],
      "problemMatcher": "$msCompile"
