{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "powershell",
      "type": "process",
      "args": [
        "${workspaceFolder}/build.ps1",
        "build",
        "all",
        "quiet"
      ],
      "problemMatcher": "$msCompile"
    },
    {
