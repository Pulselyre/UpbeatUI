<uv:UpbeatControl x:Class="UpbeatUISample.View.PositionedPopupControl"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:uv="clr-namespace:UpbeatUI.View;assembly=UpbeatUI"
                  KeepInBounds="True"
                  XPositionPercent="{Binding PositionViewModel.XPosition}"
                  YPositionPercent="{Binding PositionViewModel.YPosition}"
                  mc:Ignorable="d"
                  d:DesignHeight="450" d:DesignWidth="450">
    <Border BorderBrush="Black"
            BorderThickness="5"
            Background="White">
        <TextBlock Text="{Binding Message}"
                    Margin="10" />
    </Border>
</uv:UpbeatControl>
