<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uv="clr-namespace:UpbeatUI.View"
                    xmlns:uvc="clr-namespace:UpbeatUI.View.Converters">
    <Style TargetType="{x:Type uv:UpbeatControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type uv:UpbeatControl}">
                    <Canvas x:Name="PositionCanvas">
                        <ContentPresenter Content="{TemplateBinding Content}">
                            <ContentPresenter.Style>
                                <Style TargetType="ContentPresenter">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                         Path="HeightPercent"
                                                         Converter="{uvc:NotNullConverter}" />
                                            </DataTrigger.Binding>
                                            <Setter Property="Height">
                                                <Setter.Value>
                                                    <MultiBinding Converter="{uvc:PercentOfToSizeConverter}">
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                                 Path="HeightPercent" />
                                                        <Binding ElementName="PositionCanvas"
                                                                 Path="ActualHeight" />
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                         Path="WidthPercent"
                                                         Converter="{uvc:NotNullConverter}" />
                                            </DataTrigger.Binding>
                                            <Setter Property="Width">
                                                <Setter.Value>
                                                    <MultiBinding Converter="{uvc:PercentOfToSizeConverter}">
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                                 Path="WidthPercent" />
                                                        <Binding ElementName="PositionCanvas"
                                                                 Path="ActualWidth" />
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentPresenter.Style>
                            <Canvas.Top>
                                <MultiBinding Converter="{uvc:PercentPositionPlacementConverter}">
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                             Path="YPositionPercent" />
                                    <Binding ElementName="PositionCanvas"
                                             Path="ActualHeight" />
                                    <Binding RelativeSource="{RelativeSource Self}"
                                             Path="ActualHeight" />
                                    <Binding Source="False" />
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                             Path="KeepInBounds" />
                                </MultiBinding>
                            </Canvas.Top>
                            <Canvas.Left>
                                <MultiBinding Converter="{uvc:PercentPositionPlacementConverter}">
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                             Path="XPositionPercent" />
                                    <Binding ElementName="PositionCanvas"
                                             Path="ActualWidth" />
                                    <Binding RelativeSource="{RelativeSource Self}"
                                             Path="ActualWidth" />
                                    <Binding Source="False" />
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                             Path="KeepInBounds" />
                                </MultiBinding>
                            </Canvas.Left>
                        </ContentPresenter>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
